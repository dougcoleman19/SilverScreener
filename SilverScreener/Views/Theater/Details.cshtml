@model TheaterViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="row">
    <div class="col-md-12">
        <h2>@Model.Name</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p>Location: <strong>@Model.Location</strong></p>
    </div>
</div>

<div id="movies">
    @if (!Model.Movies.Any())
    {
        <p> Now Movies Available. Add some here</p>
    }
</div>